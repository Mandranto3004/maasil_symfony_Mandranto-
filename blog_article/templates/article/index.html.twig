{% extends 'base.html.twig' %}

{% block title_page %}
    <small>Liste des articles</small>
{% endblock %}

{% block body %}
{% for message in app.flashes('success') %}
<div class="alert alert-success">
    {{ message }}
</div>
{% endfor %}
<div class="row">
    <a href="{{ path('app_article_new')}}" class="btn btn-primary"><span class="glyphicon glyphicon-plus"></a>
</div>
&nbsp;
<div>
    <div class="row">
        <div class="box-body table-responsive no-padding">
            <table class="table table-hover">

                <thead>
                    <tr>
                        <th>Titre de l'article</th>
                        <th>Auteur de l'article</th>
                        <th>Texte de l'article</th>
                        <th>Date de creation</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% for article in articles %}
                    <tr>
                        <td>{{article.titre}}</td>
                        <td>{{article.auteur}}</td>
                        <td>{{article.texte}}</td>
                        <td>{{article.createdAt|date("m/d/Y")}}</td>
                        <td>{{article.updatedAt|date("m/d/Y")}}</td>
                        <td>
                            <a href="{{ path('app_article_edit', {'id': article.id}) }}"
                                class="btn btn-block btn-primary"><span class="glyphicon glyphicon-edit"></span></a>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

    </div>

</div>
{% endblock %}
